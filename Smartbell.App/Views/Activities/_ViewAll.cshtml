@model IEnumerable<ActivityResponseDto>

<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive">
            <thead class="thead-light">
                <tr>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Video</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Description</td>
                        <td>
                            <img src="@item.ImageFilePath" alt="Image taken at the door" width="100" height="100" />
                        </td>
                        <td>
                            <video width="300" height="100" controls>
                                <source src="@item.VideoFilePath" type="video/mp4">
                            </video>
                        </td>
                        <td>
                            @item.TimeStamp.ToString("dddd, dd MMMM yyyy HH:mm")
                        </td>
                        @*<td>
                            <a onclick="showInPopup('@Url.Action("AddOrEdit","Activities",new {Id=item.Id},Context.Request.Scheme)', 'Update Ringtone')"
                               class="btn btn-info text-white">
                                <i class="fa-solid fa-pencil"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline"
                                  onclick="return jQueryAjaxDelete(this)">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>